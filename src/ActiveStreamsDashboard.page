<script>
    var asPollInterval = <?=$poll_interval;?>;
    var asScrollEnabled = <?= $scroll_names ? 'true' : 'false'; ?>;
    var asIsHovering = false;
    
    function updateActiveStreamsDashboard() {
        // Pause update if hovering to read text
        if (asIsHovering) return;

        $.get("/plugins/activestreams/activestreams_api.php", function(data) {
            if (data) {
                // 1. Update list
                $("#activestreams_streams").html(data);
                
                // 2. Update count
                var count = $("#activestreams_streams .as-row").length;
                if(data.indexOf("No active streams") !== -1 || 
                   data.indexOf("No servers configured") !== -1 ||
                   data.indexOf("Connection failed") !== -1) { 
                   count = 0; 
                }
                $("#activestreams_count").text(count);
            }
        });
    }

    $(function() {
        // Track hover state on the widget container
        $("#activestreams_streams").hover(
            function() { asIsHovering = true; },
            function() { asIsHovering = false; }
        );

        // Name Scrolling Logic
        $(document).on('mouseenter', '.as-name', function() {
            if (!asScrollEnabled) return;
            var $el = $(this);
            var scrollW = $el[0].scrollWidth;
            var clientW = $el[0].clientWidth;
            var delta = scrollW - clientW;

            if (delta > 0) {
                // Speed: ~30px per second. Duration min 2 seconds.
                var speed = 30; 
                var duration = (delta / speed) * 1000;
                if (duration < 2000) duration = 2000;

                // Animate scrollLeft
                $el.stop(true, false).animate({ scrollLeft: delta + 5 }, duration, 'linear');
            }
        }).on('mouseleave', '.as-name', function() {
            if (!asScrollEnabled) return;
            // Snap back quickly
            $(this).stop(true, false).animate({ scrollLeft: 0 }, 500);
        });

        updateActiveStreamsDashboard();
        setInterval(updateActiveStreamsDashboard, asPollInterval);
    });
</script>
